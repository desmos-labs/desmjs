  "dependencies": {
    "detect-browser": "^5.3.0",
    "qrcode.react": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@walletconnect/sign-client": "^2",
    "@walletconnect/types": "^2",
    "react": "^16.8.0 || ^17 || ^18",
    "react-dom": "^16.8.0 || ^17 || ^18"
  }
