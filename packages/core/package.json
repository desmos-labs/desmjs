    "@types/elliptic": "^6.4.18",
    "@types/jest": "^29.5.12",
    "@types/long": "^4.0.1",
    "@types/node": "^20.8.8",
    "@types/pino": "^7.0.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5"
