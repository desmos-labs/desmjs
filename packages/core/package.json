    "@cosmjs/proto-signing": "0.31.3",
    "@cosmjs/stargate": "0.31.3",
    "@cosmjs/tendermint-rpc": "0.31.3",
    "@cosmjs/utils": "0.31.3",
    "@desmoslabs/desmjs-types": "workspace:packages/types",
    "cosmjs-types": "0.8.0",
